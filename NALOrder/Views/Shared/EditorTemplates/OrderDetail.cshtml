@model   NALOrder.ViewModel.OrderDetailViewModel

<tr class="hidden">
    <td></td>
    <td>
        @Html.DropDownListFor(x => x.ProductId, new SelectList(Model.Products, "ID", "ProductName", "---Select---"),
                 htmlAttributes: new { @class = "form-control" })
    </td>
    <td>
        @Html.TextBoxFor(x => x.Quality, htmlAttributes: new { @class = "form-control", @type = "number" })
    </td>
    <td></td>
    <td><span id="total" class="price"></span></td>
    <td><button class="btn btn-danger btn-sm">Delete</button></td>
</tr>
